label-separator-foreground = ${color.text-fg}

menu-0-0 = rb ↻
menu-0-0-foreground = ${color.orange}
menu-0-0-exec = #powermenu.open.1
menu-0-1 = off ⏻
menu-0-1-foreground = ${color.red}
menu-0-1-exec = #powermenu.open.2

menu-1-0 = ← back
menu-1-0-foreground = ${color.text-fg}
menu-1-0-exec = #powermenu.open.0
menu-1-1 = rb ↻
menu-1-1-foreground = ${color.orange}
menu-1-1-exec = sudo reboot

; @2DO: suspend ⏾

menu-2-0 = off ⏻
menu-2-0-foreground = ${color.red}
menu-2-0-exec = sudo poweroff
menu-2-1 = ← back
menu-2-1-foreground = ${color.text-fg}
menu-2-1-exec = #powermenu.open.0

