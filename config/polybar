[color]
fg = #f8f8f2
text-fg = ${self.fg}
bg = #282a36
base-bg = ${self.bg:#dd282a36}
text-bg = ${self.bg}
selection = #44475a
comment = #6272a4
module-bg = ${self.comment}
cyan = #8be9fd
green = #50fa7b
orange = #ffb86c
pink = #ff79c6
purple = #bd93f9
red  = #ff5555
white = #f8f8f2
yellow = #f1fa8c

[layout]
def-padding = 1
def-padding-x2 = 2
def-i3-padding = 2

[exec]
screenshot = gnome-screenshot --interactive

[bar/base]
width = 100%
height = 27
radius = 6.0

background = ${color.base-bg}
foreground = ${color.text-bg}

; size of under-/overlines
line-size = 3
border-size = 4

; some cursors to indicate a module's functions
cursor-click = pointer
cursor-scroll = ns-resize

;click-left = 
click-middle = ${exec.screenshot}
click-right = ${exec.screenshot}
;scroll-up = 
;scroll-down = 
;double-click-left = 
;double-click-middle = 
;double-click-right = 

module-margin-right = 1

; fonts
font-0 = JetBrains Mono:fontformat=truetype:style=Medium:size=10:antialias=true;2
font-1 = Font Awesome 5 Free:fontformat=truetype:pixelsize=10;0
font-2 = Iosevka Term
font-3 = Hack:fontformat=truetype:pixelsize=8;3

; bar doesn't take away gaps space
;override-redirect = true

; restack the bar window and put it above the selected window manager's root
; fixes the issue where the bar is being drawn on top of fullscreen window's
;wm-restack = i3

[bar/bar]
;» xrandr -q
monitor = ${env:MONITOR:DVI-D-0}
inherit = bar/base

bottom = true
fixed-center = true

modules-left = i3
modules-right = pulseaudio xkeyboard

tray-detached = false
tray-position = center
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = 24
;tray-padding = ${layout.def-padding-x2}
;tray-scale = 1

[bar/foo]
inherit = bar/base
bottom = false
fixed-center = false

modules-left = i3 xwindow
modules-center = pulseaudio
modules-right = powermenu filesystem cpu temperature memory swap date

[generic-format-style]
format-background = ${color.purple}
format-padding = ${layout.def-padding}
format-prefix-padding-right = ${layout.def-padding}
format-prefix-background = ${color.base-bg}
format-prefix-foreground = ${color.module-bg}
format-suffix-background = ${color.base-bg}
format-suffix-foreground = ${color.module-bg}

[module/i3]
type = internal/i3

index-sort = true
; Don't wrap around when scrolling through workspaces
wrapping-scroll = false
; Only show workspaces on the same output as the bar
pin-workspaces = true
; Split the workspace label on ':' to get its name
strip-wsnumbers = true

format = <label-state><label-mode>

; Active workspace on focused monitor
;label-focused = %{T2}%icon%%{T-} %name%
label-focused = %name%
label-focused-foreground = ${color.text-fg}
label-focused-background = ${color.module-bg}
;label-focused-underline = ${color.pink}
label-focused-overline = ${color.pink}
label-focused-padding = ${layout.def-i3-padding}

; Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-foreground = ${color.text-fg}
label-unfocused-background = ${color.module-bg}
label-unfocused-padding = ${layout.def-i3-padding}

; Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-background = ${color.module-bg}
label-visible-padding = ${layout.def-i3-padding}

; Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-foreground = ${color.text-bg}
label-urgent-background = ${color.red}
label-urgent-padding = ${layout.def-i3-padding}

label-mode-background = ${color.orange}
label-mode-foreground = ${color.text-bg}
label-mode-padding = ${layout.def-i3-padding}

[module/xwindow]
type = internal/xwindow
inherit = generic-format-style
label = %title:0:150:...%

[module/xkeyboard]
type = internal/xkeyboard

; <label-indicator>
format = <label-layout>
format-spacing = 2

; %layout% %name% %number%
label-layout = %icon%
