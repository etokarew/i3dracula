label-layout-background = ${color.fg}
label-layout-foreground = ${color.bg}

;layout-icon-default = ⌨
layout-icon-0 = us;US
layout-icon-1 = ru;РУ

[module/date]
type = internal/date
inherit = generic-format-style

interval = 1

date = %d.%m.%Y
date-alt = %A, %d %B %Y

time = %H:%M:%S
time-alt = %H:%M

label = %date% %time%

[module/powermenu]
type = custom/menu

