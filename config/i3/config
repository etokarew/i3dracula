client.placeholder         #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background          #F8F8F2

########## i3-gaps integration ##########
#for_window [class="^.*"] border pixel 2

# force floating for all new windows
for_window [class="[.]*"] floating enable

smart_gaps on
smart_borders no_gaps

gaps inner 5
gaps outer 0

