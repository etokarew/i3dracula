[window]
#command=xtitle -t 30 -s
command=echo "$(xtitle -t 60)"
#interval=persist
interval=1
min_width=525
color=#bd93f9

[cpu]
command=i3usage=$(neofetch cpu_usage); echo -ne "\x20${i3usage##*: }"
interval=5
min_width=80
color=#8be9fd

[ram]
#command=free -m | awk 'NR==2{printf "🗐 %.2f/%.2f", $3/1024, $2/1024 }'
command=free -m | awk 'NR==2{pr=100*($3/$2); if(pr<12.5) foo="▁"; else if(pr<25) foo="▂"; else if(pr<37.5) foo="▃"; else if(pr<50) foo="▄"; else if(pr<62.5) foo="▅"; else if(pr<75) foo="▆"; else if(pr<87.5) foo="▇"; else foo="█"; printf "%s %.2f/%.2f", foo, $3/1024, $2/1024 }'
interval=30
min_width=120
color=#50fa7b

